{
  "manifest_version": 2,
  "name": "Phantom Paradox Agent",
  "short_name": "PP Agent",
  "version": "0.1.0",
  "description": "Earn crypto by sharing bandwidth. Lightweight relay agent for the Phantom Paradox decentralized network.",
  
  "permissions": [
    "storage",
    "alarms",
    "notifications",
    "https://api.devnet.solana.com/*",
    "https://api.mainnet-beta.solana.com/*",
    "https://api.phantomparadox.io/*",
    "https://*.cloudflare.com/*"
  ],
  
  "background": {
    "scripts": ["src/background.js"],
    "persistent": false
  },
  
  "browser_action": {
    "default_popup": "src/popup.html",
    "default_title": "Phantom Paradox Agent"
  },
  
  "icons": {
    "16": "icons/icon16.png",
    "32": "icons/icon32.png",
    "48": "icons/icon48.png",
    "128": "icons/icon128.png"
  },
  
  "browser_specific_settings": {
    "gecko": {
      "id": "agent@phantomparadox.io",
      "strict_min_version": "78.0"
    }
  },
  
  "author": "Phantom Paradox Team",
  "homepage_url": "https://phantomparadox.io"
}
